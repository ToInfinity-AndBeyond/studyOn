default_platform(:ios)

platform :ios do
  desc "Build an unsigned IPA"
  lane :build_unsigned do
    gym(
      output_directory: "./output/ipa",
      output_name: "MyApp.ipa",
      export_method: "development",  # This can be "ad-hoc" or "enterprise" depending on your needs
      export_options: {
        compileBitcode: false,
        method: "development",  # or "ad-hoc"
        signingStyle: "manual", # disable signing
        provisioningProfiles: {}
      },
      include_bitcode: false,
      use_legacy_build_api: false,
      codesigning_identity: "",
      skip_package_ipa: false,
      skip_profile_detection: true
    )
  end
end

